<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phyon.a170502.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:id="@+id/main_input_txt"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@null"/>
        <TextView
            android:id="@+id/main_result"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_all_clear"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="AC"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_empty_button"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text=" "
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_division"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="/"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_delete"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="DEL"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_7"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="7"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_8"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="8"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_9"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="9"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_multiply"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="X"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_4"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="4"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_5"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="5"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_6"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="6"
                android:textSize="30dp" />
            <Button
                android:id="@+id/main_subtraction"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="-"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_1"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="1"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_2"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="2"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_3"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="3"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_add"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="+"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_0"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="0"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_dot"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="."
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_bracket"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="(  )"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/main_equal"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:text="="
                android:textSize="30dp"/>
        </GridLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
